<div class="w-full">
    <div class="w-2/3 mx-auto h-screen">
        <div class="text-center">
            <button class="bg-black text-white p-2 rounded-md m-4">
                <a href="/habit/creation-form" target="_blank">Add Habit</a>
            </button>
        </div>
        <div class="flex flex-col gap-4 w-3/4 mx-auto my-6">
            <% for(let i = 0; i < habits.length; i++) { %>
            <a href="<%= `/habit/view/${habits[i]._id}` %> ">
                <div class="flex flex-col bg-indigo-200 p-8 hover:scale-110 rounded-lg">
                    <!-- Name of Habit -->
                    <div class="flex flex-row justify-between text-2xl">
                        <p><%= habits[i].title %> </p>
                        <p><%= moment(habits[i].start_date).format("DD MMM YYYY") %> </p>
                    </div>
                </div>
            </a>
            <% } %>
        </div>
    </div>
</div>